<div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
  <% for (let i = 0; i < products.length; i++) { %>
    <div class="group relative">
     <!-- <div href="#" class="block aspect-h-1 aspect-w-1 w-full h-400 overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
    -->
<div href="#" class="block aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
        <div class="absolute top-0 right-0 p-2 cursor-pointer" onclick="deleteProduct('<%= i %>', event, '<%= products[i].id %>')">
          <i class="fas fa-trash"></i>
        </div>
        <img src="<%= products[i].imgurl %>" alt="<%= products[i].imgurl %>" class="w-full object-cover object-center" style="height: 400px;">

      </div>
      <div class="mt-4 text-sm text-gray-700">
        <div class="editable-content border border-gray-300 rounded p-2 focus:border-blue-500 transition duration-300 ease-in-out" data-index="<%= i %>" >
          <input type="text" name="name" value="<%= products[i].name %>" class="ml-1 w-full" placeholder="Enter product name" data-key="<%= products[i].id %>">
        </div>

        <div class="editable-content mt-2 border border-gray-300 rounded p-2 focus:border-blue-500 transition duration-300 ease-in-out flex items-center" data-index="<%= i %>">
          <span class="text-gray-600">$</span>
          <input type="text" name="price" value="<%= products[i].price %>" class="ml-1 flex-grow" placeholder="Enter price" data-key="<%= products[i].id %>">
        </div>
        <div class="editable-content border border-gray-300 rounded p-2 focus:border-blue-500 transition duration-300 ease-in-out" data-index="<%= i %>" >
          <input type="text"  name="category" value="<%= products[i].category %>" class="ml-1 w-full" placeholder="Enter product type" data-key="<%= products[i].id %>">
        </div>

        <div class="editable-content border border-gray-300 rounded p-2 focus:border-blue-500 transition duration-300 ease-in-out" data-index="<%= i %>" >
          <input type="text"  name="description" value="<%= products[i].description %>" class="ml-1 w-full" placeholder="Enter description" data-key="<%= products[i].id %>">
        </div>
        <div class="editable-content border border-gray-300 rounded p-2 focus:border-blue-500 transition duration-300 ease-in-out" data-index="<%= i %>" >
          <input type="text"  name="imgurl" value="<%= products[i].imgurl %>" class="ml-1 w-full" placeholder="Enter Image Url" data-key="<%= products[i].id %>">
        </div>

      </div>
    </div>
    <% } %>
</div>
